@{
    ViewBag.Title = "Stock";
}

<h2>Greenwich Stock</h2>
<div class="clearfix">
    <h4>Category</h4>
    <hr />
    <div class="col-md-8" style="display:inline-block">
        @Html.Action("RenderCategoryTable", "Book")
    </div>
    <div class="col-md-4" style="display:inline-block">
        @Html.Partial("~/Views/Book/_PartialCategoryCreate.cshtml")
    </div>
</div>
<div class="clearfix">
    <h4>Book</h4>
    <hr />
    <div class="col-md-8" style="display:inline-block">
        @Html.Action("RenderBookTable", "Book")
    </div>
    <div class="col-md-4" style="display:inline-block">
        @Html.Partial("~/Views/Book/_PartialBookCreate.cshtml")
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#TableCategory tr:eq(1)").addClass("active").click();
        });
        function ShowBooks(id) {
            $("#rowC_" + id).addClass("active").siblings().removeClass("active");

            var table, tr, td, i;
            table = document.getElementById("TableBook");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    if (td.innerHTML.indexOf(id) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
        function OnCreateCategory() {
            location.reload();
        }
    </script>
}